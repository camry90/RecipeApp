<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker_white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_nav_margin_horizontal"
        android:layout_marginVertical="@dimen/layout_nav_margin_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_nav_margin_indent"
            android:layout_weight="1"
            android:text="@string/category_string"
            app:backgroundTint="@color/blue" />

        <Button
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_nav_margin_indent"
            android:layout_weight="1"
            android:text="@string/favourites_string"
            app:backgroundTint="@color/red"
            app:icon="@drawable/ic_heart"
            app:iconGravity="textEnd"
            app:iconTint="@null" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>